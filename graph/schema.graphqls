# GraphQL schema example
#
# https://gqlgen.com/getting-started/

type User {
  nickname: String!
  name: String!
  email: String!
  artist: Boolean!
}

type Query {
  users: [User!]!
}

input NewUser {
  nickname: String!
  name: String!
  email: String!
  password: String!
  artist: Boolean!
}

input Login {
  nickname: String!
  password: String!
}

type Mutation {
  createUser(input: NewUser!): User!
  login(input: Login): String!
}